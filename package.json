{
  "name": "text-app",
  "version": "1.0.0",
  "description": "A in-progess app going to be built using React, Node.js & Python",
  "main": "index.js",
  "scripts": {
    "pretest:frontend": "cd frontend",
    "test:frontend": "npm run test --watchAll=false",
    "posttest:frontend": "cd ../",
    "test": "npm-run-all test:*",
    "prelint:frontend": "cd frontend",
    "lint:frontend": "npm run lint",


          "postlint:frontend": "cd ../",
    "lint": "npm-run-all lint:*",
    "prettier": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eoinkane/text-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eoinkane/text-app/issues"
  },
  "homepage": "https://github.com/eoinkane/text-app#readme",
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all lint prettier test",
      "pre-push": "npm-run-all lint prettier test"
    }
  },
  "lint-staged": {
    "frontend/src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "backend/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
