{
  "name": "text-app",
  "version": "1.0.0",
  "description": "A in-progess app going to be built using React, Node.js & Python",
  "main": "index.js",
  "scripts": {
    "test:frontend": "cd frontend && npm run test:no-watcher && cd ../",
    "test": "npm-run-all test:* ",
    "lint:frontend": "cd frontend && npm run lint && cd ../",
    "lint": "npm-run-all lint:*",
    "prettier-staged": "lint-staged",
    "prettier": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eoinkane/text-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eoinkane/text-app/issues"
  },
  "homepage": "https://github.com/eoinkane/text-app#readme",
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all lint prettier-staged test",
      "pre-push": "npm-run-all lint prettier-staged test"
    }
  },
  "lint-staged": {
     "*.{json}": [
      "prettier -write"
    ],
    "frontend/src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "frontend/src/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "backend/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
